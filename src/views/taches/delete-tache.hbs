<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Delete tache</h3>
        </div>
        <div class="card-body">
            <form action="/taches/delete-tache/{{tache._id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <div class="form-group">
                    <h3>Voulez vous supprimer cette tache ?</h3>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>